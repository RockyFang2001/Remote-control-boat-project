<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="温度"
                android:layout_margin="20dp"
                android:ems="2"
                android:layout_gravity="center_vertical"
                android:textSize="30sp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/tem"
                android:text="0"
                android:layout_gravity="center_vertical"
                android:textSize="30sp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:text="湿度"
                android:ems="2"
                android:layout_gravity="center_vertical"
                android:textSize="30sp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:text="0"
                android:id="@+id/hum"
                android:layout_gravity="center_vertical"
                android:textSize="30sp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
            </TextView>
        </LinearLayout>
        <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="经度"
                        android:layout_margin="20dp"
                        android:layout_gravity="center_vertical"
                        android:textSize="30sp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">
                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_margin="20dp"
                        android:layout_gravity="center_vertical"
                        android:text="纬度"
                        android:textSize="30sp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">
                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_margin="20dp"

                        android:layout_gravity="center_vertical"
                        android:text="距离"
                        android:textSize="30sp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">
                    </TextView>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="0"
                    android:layout_margin="20dp"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/lon"
                    android:textSize="30sp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_margin="20dp"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/lat"
                    android:text="0"
                    android:textSize="30sp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_margin="20dp"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/dis"
                    android:text="0"
                    android:textSize="30sp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                </TextView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <Button
                    android:layout_width="wrap_content"
                    android:id="@+id/link"
                    android:text="连接"
                    android:layout_height="wrap_content">
                </Button>
                <Button
                    android:layout_width="wrap_content"
                    android:id="@+id/relink"
                    android:text="断开连接"
                    android:layout_height="wrap_content">
                </Button>
                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_marginTop="100dp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:id="@+id/left"
                        android:src="@drawable/left"
                        android:layout_height="wrap_content">

                    </ImageView>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:id="@+id/right"
                        android:src="@drawable/right"
                        android:layout_height="wrap_content">
                    </ImageView>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="wrap_content"
                    android:id="@+id/forward1"
                    android:src="@drawable/forward2"
                    android:layout_height="wrap_content">

                </ImageView>
                <ImageView
                    android:layout_width="wrap_content"
                    android:id="@+id/forward2"
                    android:src="@drawable/forward1"
                    android:layout_height="wrap_content">
                </ImageView>
                <Button
                    android:layout_width="match_parent"
                    android:id="@+id/stop"
                    android:text="stop"
                    android:layout_height="80dp">
                </Button>
                <ImageView
                    android:layout_width="wrap_content"
                    android:id="@+id/back"
                    android:src="@drawable/back"
                    android:layout_height="wrap_content">
                </ImageView>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>